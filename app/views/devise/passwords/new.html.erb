<section class="sign-sec">
      <div class="container">
          <div class="row">
              <div class="col-md-3"></div>
                <div class="col-md-6 text-center">
                  <%# <h1 class="heading-level-01">Sign In</h1> %>
                    <div class="signin-outline">
                      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'signin-form',method: :post }) do |f| %>
  
                        <h2>Forgot Password</h2>
                        <br>
                        <%= render "devise/shared/error_messages", resource: resource %>
                        <div class="form-group">
                          <span class="mail-icon"><%= image_tag("mail-icon.png", :alt => "mail-icon") %></span>    
                          <%= f.email_field :email, placeholder: "johndoe@gmail.com", class: "form-control", autofocus: true, autocomplete: "email" %>
                        </div>

                        <div class="form-group">
                          <%= f.submit "Reset Password", class: "primary-btn" %>    
                        </div>  
                      <% end %>                    
                    </div>
                    <p>Donâ€™t Have an Account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
                </div>
            </div>
        </div>
  </section>

